{
  "Mongo": {
    "Read": {
      "Connection": "mongodb://YourServer:YourPort",
      "DatabaseName": "TaskoMask_ReadDB"
    },
    "Write": {
      "Connection": "mongodb://YourServer:YourPort",
      "DatabaseName": "TaskoMask_WriteDB"
    }
  },
  "RabbitMQ": {
    "Host": "localhost",
    "ExchangeName": "monolith-api",
    "UserName": "guest",
    "Password": "guest"
  },
  "Redis": {
    "Connection": "YourServer:YourPort",
    "Password": "Password",
    "KeyNamespace": "TaskoMaskEventStore"
  },
  "Caching": {
    "CacheTimeInMinutes": 60,
    "Enabled": true
  },
  "Default": {
    "Workspace": {
      "OrganizationName": "Your Workspace",
      "ProjectName": "Default Project",
      "ProjectDescription": "Click here to add your boards",
      "BoardName": "Default Board",
      "BoardDescription": "Click here to add your tasks",
      "ToDoCardName": "ToDo Tasks",
      "DoingCardName": "Doing Tasks",
      "DoneCardName": "Done Tasks"
    }
  },
  "Jwt": {
    "Authority": "https://identity.taskomask.ir",
    "Audience": "monolith.api",
    "Policies": [
      {
        "Name": "user-full-access",
        "RequireAuthenticatedUser": true,
        "AllowedScopes": [ "monolith.read", "monolith.write" ]
      }
    ]
  },
  "Swagger": {
    "Title": "TaskoMask Monolith Api Documentation",
    "Version": "v1",
    "IncludeXmlComments": "TaskoMask.Services.Monolith.Api.xml,TaskoMask.BuildingBlocks.Contracts.xml"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Exceptions" ],
    "Enrich": [ "WithExceptionDetails" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Error"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/Logs.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  }
}
